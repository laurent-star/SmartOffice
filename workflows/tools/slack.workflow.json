{
  "name": "tool-slack",
  "nodes": [
    {
      "id": "node-trigger",
      "name": "Manual Trigger",
      "type": "n8n-nodes-base.manualTrigger",
      "typeVersion": 1,
      "position": [
        200,
        300
      ]
    },
    {
      "id": "node-normalize",
      "name": "Normalize Input",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        420,
        300
      ],
      "parameters": {
        "functionCode": "const input = items[0].json || {};\nconst params = input.params || {};\nconst tool = input.tool || {};\nconst normalized = {\n  runId: input.runId || 'run-id',\n  stepId: input.stepId || 'step',\n  tool: {\n    ref: tool.ref || 'slack',\n    provider: 'slack',\n    operation: tool.operation || params.operation || ''\n  },\n  params,\n  context: input.context || {}\n};\nreturn [{ json: normalized }];"
      }
    },
    {
      "id": "node-switch",
      "name": "Dispatch Operation",
      "type": "n8n-nodes-base.switch",
      "typeVersion": 1,
      "position": [
        660,
        300
      ],
      "parameters": {
        "propertyName": "={{$json.tool.operation}}",
        "dataType": "string",
        "rules": [
          {
            "operation": "equal",
            "value": "conversation.getMany"
          },
          {
            "operation": "equal",
            "value": "message.search"
          },
          {
            "operation": "equal",
            "value": "message.send"
          }
        ],
        "outputData": "inputData"
      }
    },
    {
      "id": "node-action-1",
      "name": "Action conversation.getMany",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [
        900,
        200
      ],
      "parameters": {
        "resource": "conversation",
        "operation": "getMany",
        "types": "={{$json.params.types}}",
        "limit": "={{$json.params.limit}}"
      }
    },
    {
      "id": "node-action-2",
      "name": "Action message.search",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [
        900,
        320
      ],
      "parameters": {
        "resource": "message",
        "operation": "search",
        "query": "={{$json.params.query}}"
      }
    },
    {
      "id": "node-action-3",
      "name": "Action message.send",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [
        900,
        440
      ],
      "parameters": {
        "resource": "message",
        "operation": "send",
        "channel": "={{$json.params.channel}}",
        "text": "={{$json.params.text}}"
      }
    }
  ],
  "connections": {
    "Manual Trigger": {
      "main": [
        [
          {
            "node": "Normalize Input",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Normalize Input": {
      "main": [
        [
          {
            "node": "Dispatch Operation",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Dispatch Operation": {
      "main": [
        [
          {
            "node": "Action conversation.getMany",
            "type": "main",
            "index": 0
          }
        ],
        [
          {
            "node": "Action message.search",
            "type": "main",
            "index": 0
          }
        ],
        [
          {
            "node": "Action message.send",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "active": false,
  "settings": {
    "executionOrder": "v1"
  }
}
