      }
    },
    {
      "id": "merge-registries-a",
      "name": "Merge Registries A",
      "type": "n8n-nodes-base.merge",
      "typeVersion": 1,
      "position": [
        860,
        420
      ],
      "parameters": {
        "mode": "mergeByIndex"
      }
    },
    {
      "id": "download-usecases",
      "name": "Download Usecases Registry",
      "type": "n8n-nodes-base.googleDrive",
      "typeVersion": 1,
      "position": [
        420,
        740
      ],
      "parameters": {
        "resource": "file",
        "operation": "download",
        "fileId": "={{$env.REGISTRY_USECASES_FILE_ID}}",
        "binaryPropertyName": "data"
      }
    },
    {
      "id": "parse-usecases",
      "name": "Parse Usecases Registry",
      "type": "n8n-nodes-base.code",
      "typeVersion": 1,
      "position": [
        640,
        740
      ],
      "parameters": {
        "language": "javascript",
        "jsCode": "const binary = items[0].binary?.data;\nif (!binary || !binary.data) {\n  throw new Error('Missing usecases registry binary');\n}\nconst content = Buffer.from(binary.data, 'base64').toString('utf8');\nconst usecasesRegistry = JSON.parse(content);\nreturn [{ json: { usecasesRegistry } }];"
      }
    },
    {
      "id": "merge-registries-b",
      "name": "Merge Registries B",
      "type": "n8n-nodes-base.merge",
      "typeVersion": 1,
      "position": [
        1080,
        520
      ],
      "parameters": {
        "mode": "mergeByIndex"
      }
    },
    {
      "id": "build-envelope",
      "name": "Build Execution Envelope",
      "type": "n8n-nodes-base.code",
      "typeVersion": 1,
      "position": [
        1300,
        520
      ],
      "parameters": {
        "language": "javascript",
        "jsCode": "const input = items[0].json || {};\nconst now = new Date().toISOString();\n\nconst registryFiles = [\n  { category: 'tools', ref: 'tools', content: input.toolsRegistry || {} },\n  { category: 'capabilities', ref: 'capabilities', content: input.capabilitiesRegistry || {} },\n  { category: 'usecases', ref: 'usecases', content: input.usecasesRegistry || {} }\n];\n\nconst envelope = {\n  header: {\n    id: `env-${Date.now()}`,\n    version: '1.0',\n    timestamp: now,\n    source: 'trigger.registry_loader',\n    destination: 'executor',\n    type: 'execution'\n  },\n  payload: {\n    steps: [\n      {\n        type: 'tool',\n        ref: 'slack',\n        params: { channel: '#ops', text: 'Registry loaded' }\n      }\n    ],\n    memory: { session_id: 'sess_001', state: {}, stack: [] },\n    registryFiles\n  }\n};\n\nreturn [{ json: envelope }];"
      }
    }
  ],
