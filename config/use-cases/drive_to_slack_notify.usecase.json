{
  "id": "drive_to_slack_notify",
  "version": "1.0.0",
  "description": "Recupere un document Drive, le resume et notifie sur Slack.",
  "inputs": [
    "memory.state.document.file_id",
    "memory.state.document.content",
    "context.slack.channel"
  ],
  "outputs": [
    "memory.state.document.file",
    "memory.state.document.summary",
    "memory.state.notification.text"
  ],
  "steps": [
    { "type": "capability", "ref": "serve_document_drive", "params": {} },
    { "type": "capability", "ref": "notify_user", "params": { "message": "Document recupere et resume disponible" } }
  ]
}
