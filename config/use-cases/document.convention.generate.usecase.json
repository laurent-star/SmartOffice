{
  "id": "document.convention.generate",
  "version": "1.0.0",
  "description": "Produit et partage une convention de formation a partir des informations du client.",
  "inputs": [
    "input.convention",
    "context.docs.convention_schema",
    "context.docs.template_id",
    "context.docs.folder_id"
  ],
  "outputs": [
    "memory.state.document.id",
    "memory.state.document.file"
  ],
  "steps": [
    {
      "id": "generate",
      "type": "usecase",
      "ref": "document.file.generate",
      "params": {
        "brief": "{{input.convention}}",
        "schema": "{{context.docs.convention_schema}}"
      }
    }
  ]
}
