{
  "id": "document.file.generate",
  "version": "1.0.0",
  "description": "Genere un document a partir d'un brief et d'un schema, puis expose le fichier Drive.",
  "inputs": [
    "input.brief",
    "input.schema",
    "context.docs.template_id",
    "context.docs.folder_id"
  ],
  "outputs": [
    "memory.state.document.payload",
    "memory.state.document.id",
    "memory.state.document.file"
  ],
  "steps": [
    {
      "id": "draft",
      "type": "tool",
      "ref": "openai",
      "params": {
        "action": "text.generateModelResponse",
        "text": "{{input.brief}}",
        "schema": "{{input.schema}}"
      },
      "save": {
        "to": {
          "memory.state.document.payload": "$.data.structured_data"
        }
      }
    },
    {
      "id": "create",
      "type": "tool",
      "ref": "google-docs",
      "params": {
        "action": "document.create",
        "title": "Document {{context.docs.template_id}}",
        "folderId": "{{context.docs.folder_id}}"
      },
      "save": {
        "to": {
          "memory.state.document.id": "$.data.documentId"
        }
      }
    },
    {
      "id": "update",
      "type": "tool",
      "ref": "google-docs",
      "params": {
        "action": "document.update",
        "documentId": "{{memory.state.document.id}}",
        "text": "{{memory.state.document.payload}}"
      }
    },
    {
      "id": "download",
      "type": "capability",
      "ref": "document.file.fetch",
      "params": {
        "file_id": "{{memory.state.document.id}}"
      }
    }
  ]
}
