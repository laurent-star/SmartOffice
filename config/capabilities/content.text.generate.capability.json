{
  "id": "content.text.generate",
  "version": "1.0.0",
  "description": "Genere un texte a partir d'un prompt.",
  "inputs": [
    "input.prompt"
  ],
  "outputs": [
    "memory.state.content.generated"
  ],
  "steps": [
    {
      "id": "generate_text",
      "type": "tool",
      "ref": "openai",
      "params": {
        "action": "text.generateChatCompletion",
        "text": "{{input.prompt}}"
      },
      "save": {
        "to": {
          "memory.state.content.generated": "$.data.summary"
        }
      }
    }
  ]
}
