{
  "id": "serve_document_drive",
  "version": "1.0.0",
  "description": "Recupere un document Drive, expose ses metadonnees et produit un resume.",
  "inputs": [
    "memory.state.document.file_id",
    "memory.state.document.content"
  ],
  "outputs": [
    "memory.state.document.file",
    "memory.state.document.summary"
  ],
  "steps": [
    {
      "id": "fetch_document",
      "type": "tool",
      "ref": "google-drive",
      "params": {
        "action": "file.get",
        "fileId": "{{memory.state.document.file_id}}"
      },
      "save": {
        "to": {
          "memory.state.document.file": "$.data.file"
        }
      }
    },
    {
      "id": "summarize_document",
      "type": "tool",
      "ref": "openai",
      "params": {
        "action": "assistant.summarize",
        "text": "{{memory.state.document.content}}"
      },
      "save": {
        "to": {
          "memory.state.document.summary": "$.data.summary"
        }
      }
    }
  ]
}
