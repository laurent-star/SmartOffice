{
  "id": "human.validation.request",
  "version": "1.0.0",
  "description": "Demande une validation humaine via Slack.",
  "inputs": [
    "input.message",
    "context.slack.channel"
  ],
  "outputs": [
    "memory.state.validation.status"
  ],
  "steps": [
    {
      "id": "request_validation",
      "type": "tool",
      "ref": "slack",
      "params": {
        "action": "message.send",
        "channel": "{{context.slack.channel}}",
        "text": "{{input.message}}"
      },
      "save": {
        "to": {
          "memory.state.validation.status": "$.data"
        }
      }
    }
  ]
}
