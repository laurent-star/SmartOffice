{
  "id": "notify_user",
  "version": "1.0.0",
  "description": "Notifie un utilisateur via Slack après une opération automatisée.",
  "inputs": [
    "input.message",
    "context.slack.channel"
  ],
  "outputs": [
    "memory.state.notification.text"
  ],
  "steps": [
    {
      "id": "format_message",
      "type": "tool",
      "ref": "openai",
      "params": {
        "action": "summarize",
        "text": "{{input.message}}"
      },
      "save": {
        "to": {
          "memory.state.notification.text": "$.data.summary"
        }
      }
    },
    {
      "id": "send_notification",
      "type": "tool",
      "ref": "slack",
      "params": {
        "action": "send_message",
        "channel": "{{context.slack.channel}}",
        "text": "{{memory.state.notification.text}}"
      }
    }
  ]
}
