{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "notify_user",
  "version": "1.0.0",
  "description": "Notifie un utilisateur via Slack après création d'une tâche Jira.",
  "steps": [
    {
      "type": "tool",
      "ref": "openai",
      "params": {
        "action": "summarize",
        "text": "{{input.message}}"
      }
    },
    {
      "type": "tool",
      "ref": "slack",
      "params": {
        "action": "send_message",
        "channel": "{{context.slack.channel}}",
        "text": "{{output.summary}}"
      }
    }
  ]
}
