{
  "id": "notification.message.send",
  "version": "1.0.0",
  "description": "Envoie un message Slack.",
  "inputs": [
    "input.message",
    "context.slack.channel"
  ],
  "outputs": [
    "memory.state.notification.message_id"
  ],
  "steps": [
    {
      "id": "send_message",
      "type": "tool",
      "ref": "slack",
      "params": {
        "action": "message.send",
        "channel": "{{context.slack.channel}}",
        "text": "{{input.message}}"
      },
      "save": {
        "to": {
          "memory.state.notification.message_id": "$.data"
        }
      }
    }
  ]
}
