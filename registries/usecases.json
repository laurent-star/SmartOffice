[
  {
    "id": "drive_to_slack_notify",
    "version": "1.0.0",
    "description": "Partage un document Drive, le resume et notifie sur Slack.",
    "path": "config/use-cases/drive_to_slack_notify.usecase.json",
    "inputs": [
      "memory.state.document.file_id",
      "context.drive.share_emails",
      "context.slack.channel"
    ],
    "outputs": [
      "memory.state.document.share_status",
      "memory.state.document.summary",
      "memory.state.notification.text"
    ]
  },
  {
    "id": "generate_convention_formation",
    "version": "1.0.0",
    "description": "Produit et partage la convention de formation à partir des informations du client.",
    "path": "config/use-cases/generate_convention_formation.usecase.json",
    "inputs": [
      "input.convention",
      "context.docs.convention_schema",
      "context.docs.template_id",
      "context.docs.recipients"
    ],
    "outputs": [
      "memory.state.document.id",
      "memory.state.notification.text"
    ]
  },
  {
    "id": "incident_management",
    "version": "1.0.0",
    "description": "Gère un incident en classifiant le ticket, en produisant un résumé et en notifiant l'équipe.",
    "path": "config/use-cases/incident_management.usecase.json",
    "inputs": [
      "memory.state.email.body",
      "memory.state.email.from",
      "memory.state.email.subject",
      "context.slack.incident_channel",
      "context.slack.summary_channel"
    ],
    "outputs": [
      "memory.state.email.category",
      "memory.state.content.summary",
      "memory.state.notification.text"
    ]
  },
  {
    "id": "lead_to_client",
    "version": "1.0.0",
    "description": "Convertit un lead entrant en client en classifiant la demande puis en synchronisant le CRM.",
    "path": "config/use-cases/lead_to_client.usecase.json",
    "inputs": [
      "memory.state.email.body",
      "context.monday.board_id",
      "memory.state.client",
      "memory.state.client.company",
      "memory.state.client.contact.email",
      "memory.state.client.contact.name"
    ],
    "outputs": [
      "memory.state.client.monday_item_id",
      "memory.state.client.axonaut_company_id",
      "memory.state.notification.text"
    ]
  },
  {
    "id": "onboarding_client",
    "version": "1.0.0",
    "description": "Déploie le kit d'onboarding client et partage les documents nécessaires.",
    "path": "config/use-cases/onboarding_client.usecase.json",
    "inputs": [
      "input.brief",
      "input.schema",
      "context.docs.template_id",
      "context.docs.recipients",
      "context.monday.board_id",
      "memory.state.client",
      "memory.state.client.company",
      "memory.state.client.contact.email",
      "memory.state.client.contact.name"
    ],
    "outputs": [
      "memory.state.document.id",
      "memory.state.client.monday_item_id",
      "memory.state.client.axonaut_company_id",
      "memory.state.notification.text"
    ]
  },
  {
    "id": "slack_drive_to_gmail",
    "version": "1.0.0",
    "description": "Repond a une requete Slack en recuperant un document Drive puis envoi Gmail.",
    "path": "config/use-cases/slack_drive_to_gmail.usecase.json",
    "inputs": [
      "memory.state.document.file_id",
      "context.drive.share_emails",
      "context.slack.channel",
      "memory.state.email.to",
      "memory.state.email.subject"
    ],
    "outputs": [
      "memory.state.document.share_status",
      "memory.state.document.summary",
      "memory.state.email.message_id"
    ]
  },
  {
    "id": "daily_briefing",
    "version": "1.0.0",
    "description": "Génère un récapitulatif quotidien des emails, événements et tâches avec des liens cliquables, puis l'envoie au destinataire choisi.",
    "path": "config/use-cases/daily_briefing.usecase.json",
    "inputs": [
      "input.time_window.start",
      "input.time_window.end",
      "input.email_limit",
      "input.task_limit",
      "context.gmail.recipient",
      "context.gmail.query",
      "context.calendar.timezone",
      "context.monday.board_id"
    ],
    "outputs": [
      "memory.state.briefing.summary",
      "memory.state.briefing.sent_message"
    ]
  }
]
