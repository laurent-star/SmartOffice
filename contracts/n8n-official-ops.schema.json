{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://smart-office.local/schemas/n8n-official-ops.schema.json",
  "title": "N8nOfficialOperations",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "required": ["vendor", "docs"],
      "properties": {
        "vendor": { "type": "string", "minLength": 1 },
        "docs": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "format": "uri" },
          "uniqueItems": true
        }
      }
    },
    "providers": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z0-9-]+$": {
          "type": "object",
          "additionalProperties": false,
          "required": ["nodeType", "resources"],
          "properties": {
            "nodeType": { "type": "string", "minLength": 1 },
            "resources": {
              "type": "object",
              "minProperties": 1,
              "additionalProperties": false,
              "patternProperties": {
                "^[a-zA-Z0-9_-]+$": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["operations"],
                  "properties": {
                    "operations": {
                      "type": "object",
                      "minProperties": 1,
                      "additionalProperties": false,
                      "patternProperties": {
                        "^[a-zA-Z0-9_-]+$": {
                          "type": "object",
                          "additionalProperties": false,
                          "required": ["params", "returns"],
                          "properties": {
                            "description": { "type": "string" },
                            "params": {
                              "type": "object",
                              "additionalProperties": false,
                              "required": ["required", "optional"],
                              "properties": {
                                "required": {
                                  "type": "array",
                                  "items": { "type": "string", "minLength": 1 },
                                  "uniqueItems": true
                                },
                                "optional": {
                                  "type": "array",
                                  "items": { "type": "string", "minLength": 1 },
                                  "uniqueItems": true
                                }
                              }
                            },
                            "returns": {
                              "type": "object",
                              "additionalProperties": false,
                              "minProperties": 1,
                              "properties": {
                                "data": {
                                  "type": "array",
                                  "items": { "type": "string", "minLength": 1 },
                                  "uniqueItems": true
                                },
                                "binary": {
                                  "type": "array",
                                  "items": { "type": "string", "minLength": 1 },
                                  "uniqueItems": true
                                },
                                "notes": {
                                  "type": "array",
                                  "items": { "type": "string", "minLength": 1 }
                                }
                              }
                            },
                            "notes": {
                              "type": "array",
                              "items": { "type": "string", "minLength": 1 }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": ["version", "source", "providers"]
}
