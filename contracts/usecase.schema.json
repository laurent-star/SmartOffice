{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://smart-office.local/schemas/usecase.schema.json",
  "title": "Usecase",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "description": "Identifiant unique du usecase."
    },
    "version": {
      "type": "string",
      "minLength": 1,
      "description": "Version du usecase (ex: 1.0.0)."
    },
    "description": {
      "type": "string",
      "description": "Description fonctionnelle du usecase."
    },
    "inputs": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Liste des champs attendus pour le usecase."
    },
    "outputs": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Liste des champs produits par le usecase."
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "description": "Liste ordonnée des steps à exécuter dans le usecase.",
      "items": { "$ref": "https://smart-office.local/schemas/step.schema.json" }
    }
  },
  "required": ["id", "version", "steps"]
}
