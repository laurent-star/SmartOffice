{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://smart-office.local/schemas/tool-definition.schema.json",
  "title": "ToolDefinition",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "description": "Identifiant unique du tool."
    },
    "version": {
      "type": "string",
      "minLength": 1,
      "description": "Version du tool (ex: 1.0.0)."
    },
    "description": {
      "type": "string",
      "description": "Description fonctionnelle du tool."
    },
    "actions": {
      "type": "array",
      "minItems": 1,
      "description": "Liste des operations supportees par le tool.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Nom de l'action (operation)."
          },
          "input": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Liste des cles attendues dans params."
          },
          "output": {
            "type": "string",
            "description": "Nom de la cle principale renvoyee."
          }
        },
        "required": ["name"]
      }
    }
  },
  "required": ["id", "version", "actions"]
}
