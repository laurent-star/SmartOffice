{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://smart-office.local/schemas/capabilities.schema.json",
  "title": "Capabilities",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["key", "description", "categories", "operations"],
    "properties": {
      "key": { "type": "string", "pattern": "^[a-z0-9_]+$" },
      "description": { "type": "string", "minLength": 1 },
      "categories": {
        "type": "array",
        "items": { "type": "string", "minLength": 1 },
        "uniqueItems": true,
        "minItems": 1
      },
      "operations": {
        "type": "array",
        "items": { "type": "string", "minLength": 1 },
        "uniqueItems": true,
        "minItems": 1
      }
    }
  }
}
