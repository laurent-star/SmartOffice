{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://smart-office.local/schemas/capability.schema.json",
  "title": "Capability",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "description": "Identifiant unique de la capability."
    },
    "version": {
      "type": "string",
      "minLength": 1,
      "description": "Version de la capability (ex: 1.0.0)."
    },
    "description": {
      "type": "string",
      "description": "Description fonctionnelle de la capability."
    },
    "inputs": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Liste des champs attendus pour la capability."
    },
    "outputs": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Liste des champs produits par la capability."
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "description": "Liste ordonnée des steps à exécuter dans la capability.",
      "items": { "$ref": "https://smart-office.local/schemas/step.schema.json" }
    }
  },
  "required": ["id", "version", "inputs", "outputs", "steps"]
}
